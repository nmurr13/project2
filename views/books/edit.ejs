<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/header.ejs") %>

    <main>
      <div>
        <form action="/books/<%= book._id %>?_method=PUT" method="post">
          <fieldset>
            <label>
                TITLE:<input
                  type="text"
                  name="title"
                  placeholder="<%= book.title %>"
                />
              </label>
              <label>
                  AUTHOR:<input
                  type="text"
                  name="author"
                  placeholder="<%= book.author%>"
                />
              </label>
              <label>
                  GENRE:<input
                  type="text"
                  name="genre"
                  placeholder="<%= book.genre%>"
                />
              </label>
              <label>
                  NUMBER OF PAGES:<input
                  type="text"
                  name="numOfPages"
                  placeholder="<%= book.numOfPages%>"
                />
              </label>
              <label>
                STARTED READING:<input type="checkbox" name="startedReading" />
              </label>
              <label>
                  FINISHED READING:<input type="checkbox" name="finishedReading" />
                </label>
          </fieldset>
          <button>Update Book</button>
        </form>
      </div>
    </main>
  </body>
</html>